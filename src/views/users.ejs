<link rel="stylesheet" href="/css/users.css" />

<h1 class="page-title">Users List</h1>

<% if (users.length) { %>
<ul class="user-list">
  <% users.sort((a, b) => a.created_at - b.created_at).forEach(user => { %>
  <li class="user-item">
    <a class="user-link" href="/users/<%= user.id %>"><%= user.username %></a>
  </li>
  <% }); %>
</ul>
<% } else { %>
<p class="no-users-message">No users yet!</p>
<% } %>
